---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/rss.xml', label: 'RSS', external: true },
];
---

<header class="header">
  <div class="container header-inner">
    <a href="/" class="logo">
      <span class="logo-text">AZ.</span>
    </a>

    <nav class="nav" aria-label="Main navigation">
      <ul class="nav-list" role="list">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class:nav-link={!item.external}
              class:external-link={item.external}
              {...(item.external && { target: '_blank', rel: 'noopener noreferrer' })}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: var(--header-height);
    background-color: color-mix(in srgb, var(--color-bg) 90%, transparent);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--color-border);
    z-index: 100;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
  }

  .logo {
    display: flex;
    align-items: center;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-text);
  }

  .logo-text {
    background: linear-gradient(135deg, var(--color-accent) 0%, #818cf8 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav-list {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-link,
  .external-link {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
    transition: color 0.15s ease;
  }

  .nav-link:hover,
  .external-link:hover {
    color: var(--color-accent);
  }

  .external-link::after {
    content: ' â†—';
    font-size: 0.75em;
  }

  @media (max-width: 640px) {
    .nav-list {
      gap: 1rem;
    }

    .nav-link,
    .external-link {
      font-size: 0.8125rem;
    }
  }
</style>
