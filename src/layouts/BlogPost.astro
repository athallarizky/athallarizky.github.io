---
import BaseLayout from './BaseLayout.astro';
import CodeBlock from '../components/CodeBlock.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const readingTime = Math.ceil(post.body.split(' ').length / 200); // ~200 words per minute
---

<BaseLayout
  title={`${post.data.title} | Athallari Zky`}
  description={post.data.description}
  image={post.data.heroImage ?? '/og-default.jpg'}
  pageType="article"
>
  <article class="blog-post">
    <header class="post-header">
      <div class="container">
        <div class="meta">
          <time datetime={post.data.pubDate.toISOString()} class="date">
            {formattedDate}
          </time>
          <span class="reading-time">{readingTime} min read</span>
        </div>

        <h1 class="title">{post.data.title}</h1>

        <p class="description">{post.data.description}</p>

        <div class="tags">
          <span class="category">{post.data.category}</span>
          {post.data.tags.map((tag) => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      </div>
    </header>

    <div class="content container">
      <Content components={{ pre: CodeBlock }} />
    </div>

    <footer class="post-footer">
      <div class="container">
        <a href="/" class="back-link">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            aria-hidden="true"
          >
            <path d="m15 18-6-6 6-6" />
          </svg>
          Back to all posts
        </a>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding: 2rem 0;
  }

  .post-header {
    padding: 3rem 0 2rem;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 2rem;
  }

  .meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .title {
    margin-bottom: 1rem;
  }

  .description {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .category {
    background-color: var(--color-accent);
    color: var(--color-bg);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .tag {
    background-color: var(--color-bg-secondary);
    color: var(--color-text-muted);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
  }

  .content {
    font-size: 1.125rem;
  }

  .content :global(h2) {
    margin-top: 3rem;
  }

  .content :global(h3) {
    margin-top: 2.5rem;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.75rem;
  }

  .content :global(pre) {
    margin: 2rem 0;
  }

  .post-footer {
    padding: 3rem 0;
    border-top: 1px solid var(--color-border);
    margin-top: 3rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    transition: color 0.15s ease;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  @media (max-width: 640px) {
    .blog-post {
      padding: 1rem 0;
    }

    .post-header {
      padding: 2rem 0 1.5rem;
    }

    .description {
      font-size: 1.125rem;
    }

    .content {
      font-size: 1rem;
    }
  }
</style>
