---
import BaseLayout from './BaseLayout.astro';
import CodeBlock from '../components/CodeBlock.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const readingTime = Math.ceil(post.body.split(' ').length / 200);
---

<BaseLayout
  title={`${post.data.title} | Athallari Zky`}
  description={post.data.description}
  image={post.data.heroImage ?? '/og-default.jpg'}
  pageType="article"
>
  <article class="blog-post">
    <header class="post-header">
      <div class="container">
        <div class="meta">
          <time datetime={post.data.pubDate.toISOString()} class="date">
            {formattedDate}
          </time>
          <span class="separator">—</span>
          <span class="reading-time">{readingTime} min read</span>
        </div>

        <h1 class="title">{post.data.title}</h1>

        <p class="description">{post.data.description}</p>

        <div class="tags">
          <span class="category">{post.data.category}</span>
          <span class="separator">—</span>
          {post.data.tags.map((tag) => <span class="tag">#{tag}</span>)}
        </div>
      </div>
    </header>

    <div class="content container">
      <Content components={{ pre: CodeBlock }} />
    </div>

    <footer class="post-footer container">
      <a href="/" class="back-link">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <path d="m15 18-6-6 6-6"></path>
        </svg>
        Back to all posts
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding: 0;
  }

  .post-header {
    padding: 6rem 0 4rem;
    margin-bottom: 2rem;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .separator {
    color: var(--color-border);
  }

  .title {
    margin-bottom: 1.5rem;
  }

  .description {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    max-width: 65ch;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .category {
    font-weight: 500;
  }

  .tag {
    color: var(--color-text-muted);
  }

  .content {
    font-size: 1.125rem;
    margin-bottom: 4rem;
  }

  /* Content overrides to keep it readable and focused */
  .content :global(h2) {
    margin-top: 4rem;
  }

  .content :global(h3) {
    margin-top: 3rem;
  }

  .content :global(ul),
  .content :global(ol),
  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.75rem;
  }

  .content :global(pre) {
    margin: 3rem 0;
  }

  .post-footer {
    padding: 4rem 1.5rem;
    margin-top: 2rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-text);
  }

  @media (max-width: 640px) {
    .post-header {
      padding: 4rem 0 2rem;
    }

    .description {
      font-size: 1.125rem;
    }

    .content {
      font-size: 1rem;
    }
  }
</style>
